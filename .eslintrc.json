{
  "root": true,
  "extends": ["universe/native", "universe/shared/typescript-analysis"],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "newline-before-return": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.d.ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
